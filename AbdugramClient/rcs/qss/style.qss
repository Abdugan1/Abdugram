/* Works for all */
* {
    /* Font */
    font-size: 12pt;
}

/* ========Page======== */
StackedWidget {
    background-color: @backgroundColor;
}

/* ========Button======== */
Button {
    /* Background */
    background-color: @decorationColor;

    /* Border */
    border-radius: 5px;

    /* Size */
    padding: 7px;

    /* Text color */
    color: #FFFFFF;
}

Button:hover {
    /* Background */
    background-color: #b05e97
}

/* LineEdit */
LineEdit {
    background-color: @backgroundColor;
    color: @mainLabelColor;
    qproperty-lineColor: @decorationColor;
    border: none;
}

/* LineEdit placeholder color */
LineEdit[text=\"\"] {
    color: @secondaryLabelColor;
}

/* MainLabel */
MainLabel {
    /* Text color */
    color: @mainLabelColor;
}

/* SecondaryLabel */
SecondaryLabel {
    /* Text color */
    color: @secondaryLabelColor;
}

/* HeaderLabel */
HeaderLabel {
    color: @headerLabelColor;
    font-size: 14pt;
    font-style: bold;
}
